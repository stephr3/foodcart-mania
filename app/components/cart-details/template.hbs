<div class="cart-details row">
  <div class="col-md-6">
    <h1>{{cart.name}}</h1>
    <h2>{{star-display ratingAverage}}</h2>
    <img src= {{cart.image}} alt= {{cart.name}} />
  </div>
  <div class="col-md-6">
    <h5><span class="glyphicon glyphicon-heart" {{action 'addToFavorites' cart}}></span> {{cart.cuisine}}</h5>
    <h5><em>{{cart.description}}</em></h5>
    <h5>Map Here</h5>
  </div>
</div>
<br>
<div class="comment-display row">
  {{add-comment cart=cart saveComment="saveComment"}}
  <br>
  <h3>Comments</h3>
  <hr>
  {{#each cart.comments as |comment|}}
    {{comment-tile comment=comment}}
  {{/each}}
</div>
