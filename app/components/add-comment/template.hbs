{{#if addNewComment}}
  <div class="new-comment">
    <h2>Add a New Comment</h2>
    <form>
      <div class="form-group">
        <label for="author">Name</label>
        {{input value=author id="author" class="form-control"}}
      </div>
      <div class="form-group">
        <label for="rating">Rating</label>
        {{#power-select
          selected=rating
          options=ratings
          onchange=(action (mut rating))
          as |item|
        }}
        {{item}}
        {{/power-select}}
      </div>
      <div class="form-group">
        <label for="text">Comment</label>
        {{textarea value=text id="text" class="form-control"}}
      </div>
      <button class="btn" {{action 'saveComment' }}>Save Comment</button>
    </form>
  </div>
{{else}}
  <button class="btn" {{action 'addNewComment'}}>Add a New Comment</button>
{{/if}}
